            <font>
                <Font size="19.0"/>
            </font>
        </Label>
        <TextField fx:id="productid" editable="false" layoutX="161.0" layoutY="69.0" opacity="0.68"/>
        <TextField fx:id="name" layoutX="161.0" layoutY="109.0" promptText="Insert new name"/>
        <TextField fx:id="description" layoutX="161.0" layoutY="148.0" promptText="Insert new description"/>
        <TextField fx:id="price" layoutX="161.0" layoutY="187.0" promptText="Insert new price"/>
