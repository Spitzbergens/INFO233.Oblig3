        <Label layoutX="62.0" layoutY="74.0" text="ProductID"/>
        <Label layoutX="57.0" layoutY="114.0" text="Product name"/>
        <Label layoutX="58.0" layoutY="153.0" text="Description"/>
        <Label layoutX="62.0" layoutY="192.0" text="Price"/>
        <Label layoutX="64.0" layoutY="231.0" text="Category"/>
        <Button layoutX="146.0" layoutY="261.0" mnemonicParsing="false" onAction="#editProduct" text="Submit"/>
